<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        >
        <TextView
            android:id="@+id/orderItemTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="kurzi lamb"
            android:textColor="#9F8176"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cashTV"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/cashTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Cash"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:textColor="#9F8176"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingRight="16dp"
            />

        <TextView
            android:id="@+id/orderPriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="100rs"
            android:textColor="#9F8176"
            app:layout_constraintStart_toStartOf="@id/cashTV"
            app:layout_constraintTop_toBottomOf="@id/cashTV"
            android:paddingRight="16dp"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>